pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    // stage('Build') {
    //   steps {
    //     sh 'npm install'
    //   }
    // }

    // stage('Test') {
    //   steps {
    //     sh 'npm run test:ci'
    //   }
    // }

    stage('Debug SSH') {
      steps {
        withCredentials([sshUserPrivateKey(credentialsId: 'SSH_NEWBIE', keyFileVariable: 'SSH_KEY_FILE')]) {
          sh '''
            echo "=== DEBUG CREDENTIALS ==="
            echo "SSH_KEY_FILE path: $SSH_KEY_FILE"
            echo "SSH_KEY_FILE content:"
            cat $SSH_KEY_FILE
            echo "=== END DEBUG ==="
          '''
        }
      }
    }
  }
}
