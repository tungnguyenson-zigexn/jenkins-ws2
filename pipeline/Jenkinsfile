pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build') {
      steps {
        sh 'npm install'
      }
    }

    stage('Test') {
      steps {
        sh 'npm run test:ci'
      }
    }

    stage('Debug SSH') {
      steps {
        sshagent(['SSH_KEY']) {
          sh '''
            echo "=== DEBUG SSH KEY ==="
            echo "SSH_KEY environment variable:"
            echo $SSH_KEY
            echo "=== END DEBUG ==="
          '''
        }
      }
    }
  }
}
