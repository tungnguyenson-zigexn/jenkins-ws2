pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    // stage('Build') {
    //   steps {
    //     sh 'npm install'
    //   }
    // }

    // stage('Test') {
    //   steps {
    //     sh 'npm run test:ci'
    //   }
    // }

    stage('Deploy to EC2') {
      steps {
        withCredentials([sshUserPrivateKey(credentialsId: 'SSH_NEWBIE', keyFileVariable: 'SSH_KEY_FILE')]) {
          sh '''
            # Change to workspace directory
            cd "$WORKSPACE"

            # Check and create directory on server
            ssh -i "$SSH_KEY_FILE" -p 3334 -o StrictHostKeyChecking=no newbie@118.69.34.46 "
              # Check if directory exists
              if [ ! -d '/usr/share/nginx/html/jenkins/tungnguyen' ]; then
                echo 'Directory /usr/share/nginx/html/jenkins/tungnguyen does not exist, creating...'
                sudo mkdir -p /usr/share/nginx/html/jenkins/tungnguyen
                sudo chown newbie:newbie /usr/share/nginx/html/jenkins/tungnguyen
                echo 'Directory created successfully'
              else
                echo 'Directory /usr/share/nginx/html/jenkins/tungnguyen already exists'
              fi

              # Show directory info
              ls -la /usr/share/nginx/html/jenkins/
            "
          '''
        }
      }
    }
  }
}
