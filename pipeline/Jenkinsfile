pipeline {
  agent any

  parameters {
    string(name: 'KEEP_RELEASES', defaultValue: '5', description: 'Number of releases to keep')
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build') {
      steps {
        sh '''
          if [ -f package.json ]; then
            (npm ci || npm install)
          else
            echo "No package.json, skip install"
          fi
        '''
      }
    }

    stage('Lint & Test') {
      steps {
        sh 'npm run test:ci'
      }
    }

    stage('Deploy') {
      steps {
        sh '''
          # Copy files to server first
          rsync -avz --delete . deploy_server:/tmp/jenkins-deploy/
        '''
        sh "ansible-playbook /var/jenkins_home/ansible/run-ws.yml -i /var/jenkins_home/ansible/hosts -e \"keep_releases=${params.KEEP_RELEASES}\" -e \"source_dir=/tmp/jenkins-deploy\""
      }
    }
  }
}
