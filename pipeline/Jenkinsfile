pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    // stage('Build') {
    //   steps {
    //     sh 'npm install'
    //   }
    // }

    // stage('Test') {
    //   steps {
    //     sh 'npm run test:ci'
    //   }
    // }

    stage('Deploy to EC2') {
      steps {
        withCredentials([sshUserPrivateKey(credentialsId: 'SSH_NEWBIE', keyFileVariable: 'SSH_KEY_FILE')]) {
          sh '''
            # Change to workspace directory
            cd "$WORKSPACE"

            # Create directory on server
            ssh -i "$SSH_KEY_FILE" -p 3334 -o StrictHostKeyChecking=no newbie@118.69.34.46 "
              mkdir -p /usr/share/nginx/html/jenkins/tungnguyen
              echo 'Directory created successfully'
            "
          '''
        }
      }
    }
  }
}
