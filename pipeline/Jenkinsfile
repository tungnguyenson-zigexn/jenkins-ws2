pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    // stage('Build') {
    //   steps {
    //     sh 'npm install'
    //   }
    // }

    // stage('Test') {
    //   steps {
    //     sh 'npm run test:ci'
    //   }
    // }

    stage('Deploy to EC2') {
      steps {
        withCredentials([sshUserPrivateKey(credentialsId: 'SSH_NEWBIE', keyFileVariable: 'SSH_KEY_FILE')]) {
          sh '''
            # Change to workspace directory
            cd "$WORKSPACE"

            # Check and create directory on server
            ssh -i "$SSH_KEY_FILE" -p 3334 -o StrictHostKeyChecking=no newbie@118.69.34.46 "
              # Set directory variable
              DEPLOY_DIR='/usr/share/nginx/html/jenkins/tungnguyen'

              # Check if directory exists
              if [ ! -d '\$DEPLOY_DIR' ]; then
                echo 'Directory \$DEPLOY_DIR does not exist, creating...'
                sudo mkdir -p '\$DEPLOY_DIR'
                sudo chown newbie:newbie '\$DEPLOY_DIR'
                echo 'Directory created successfully'
              else
                echo 'Directory \$DEPLOY_DIR already exists'
              fi
            "
          '''
        }
      }
    }
  }
}
